<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signupbackground"
    android:orientation="vertical"
    tools:context=".Signup">

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/baseline_arrow_back_ios_24"
        android:background="@color/Trensparent"
        />


    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"

        android:fontFamily="@font/poppins_medium"
        android:text="Create"
        android:textColor="@color/white"
        android:textSize="34dp"
        />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Account"
        android:textColor="@color/white"
        android:textSize="34dp"
        />


    <EditText
        android:id="@+id/NamesignnEdittext"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:hint="Full name"
        android:fontFamily="@font/poppins_semibold"
        android:inputType="text"
        android:padding="15dp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_margin="15dp"
        android:backgroundTint="@color/white"

        />

    <EditText
        android:id="@+id/EmailsignnEdittext"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:hint="Email"
        android:fontFamily="@font/poppins_semibold"
        android:inputType="textEmailAddress"
        android:padding="15dp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@color/white"
        />

    <EditText
        android:id="@+id/PhoneignEdittext"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:hint="Phone Number"
        android:fontFamily="@font/poppins_semibold"
        android:inputType="number"
        android:padding="15dp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@color/white"
        />



    <EditText
        android:id="@+id/PasswordsignEdittext"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:hint="Password"
        android:fontFamily="@font/poppins_semibold"
        android:inputType="textPassword"
        android:padding="15dp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@color/white"

        />


    <TextView
        android:id="@+id/statue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Please fill your informations"
        android:textColor="@color/Secondary"
        android:textSize="16dp"
        android:elevation="5dp"
        android:layout_gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="66dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Sign in"
            android:textColor="@color/Secondary"
            android:textSize="32dp"
            android:elevation="5dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />

        <ImageButton
            android:id="@+id/signinbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circular_blue_button"
            android:padding="5dp"
            android:layout_marginRight="66dp"
            android:src="@drawable/baseline_arrow_forward_24"
            android:layout_alignParentRight="true"
            android:elevation="2dp"
            />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        >


        <TextView
            android:id="@+id/Signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="Sign up"
            android:textColor="@color/Secondary"
            android:textSize="17dp"
            android:layout_marginLeft="36dp"
            android:layout_alignParentLeft="true" />




    </RelativeLayout>

</LinearLayout>