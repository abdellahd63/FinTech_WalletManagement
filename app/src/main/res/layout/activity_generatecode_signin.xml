<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GeneratecodeSignin"
    >

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="22dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Generate Verification Code"
        android:textColor="@color/Secondary"
        android:textSize="20dp"/>


    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Please You should remember this code, you will need it for access "
        android:textColor="@color/text"
        android:textSize="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"

        >

        <EditText
            android:id="@+id/code1textenter"
            android:layout_width="70dp"
            android:layout_height="70dp"

            android:fontFamily="@font/poppins_semibold"
            android:inputType="number"
            android:padding="15dp"
            android:textColorHint="@color/Secondary"
            android:textColor="@color/Principal"
            android:layout_margin="15dp"
            android:backgroundTint="@color/Secondary"

            />

        <EditText
            android:id="@+id/code2textenter"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:fontFamily="@font/poppins_semibold"
            android:inputType="number"
            android:padding="15dp"
            android:textColorHint="@color/Secondary"
            android:textColor="@color/Principal"
            android:layout_margin="15dp"
            android:backgroundTint="@color/Secondary"
            />

        <EditText
            android:id="@+id/code3textenter"
            android:layout_width="70dp"
            android:layout_height="70dp"

            android:fontFamily="@font/poppins_semibold"
            android:inputType="number"
            android:padding="15dp"
            android:textColorHint="@color/Secondary"
            android:textColor="@color/Principal"
            android:layout_margin="15dp"
            android:backgroundTint="@color/Secondary"

            />

        <EditText
            android:id="@+id/code4textenter"
            android:layout_width="70dp"
            android:layout_height="70dp"

            android:fontFamily="@font/poppins_semibold"
            android:inputType="number"
            android:padding="15dp"
            android:textColorHint="@color/Secondary"
            android:textColor="@color/Principal"
            android:layout_margin="15dp"
            android:backgroundTint="@color/Secondary"

            />

    </LinearLayout>


            <TextView
                android:id="@+id/generatecode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Generate one"
                android:textColor="@color/Principal"
                android:layout_gravity="center"
                android:textSize="15dp"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/ConfirmGeneratecodeBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/Principal"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Confirm"
                android:textColor="@color/white"
                android:textSize="15dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>