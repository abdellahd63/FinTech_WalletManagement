<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/homeback"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/homeback"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center_vertical"
                android:text="My wallet"
                android:textColor="@color/white"
                android:textSize="25dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="18dp"
                android:layout_alignParentRight="true"
                android:gravity="end"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/poppins_light"
                    android:gravity="center_vertical"
                    android:text="Balance"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/balancetext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center_vertical"
                    android:text="Dzd 25500.00"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

            </LinearLayout>
        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="240dp"
            app:cardBackgroundColor="@color/Trensparent"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            app:cardElevation="14dp"
            app:cardCornerRadius="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/gradiantcard"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:paddingVertical="10dp"
                    >
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:src="@drawable/puce"
                        android:layout_marginLeft="25dp"
                        android:layout_alignParentStart="true"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/fittechwhite"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>



                <TextView
                    android:id="@+id/creditcardnumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="**** **** **** 9878"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="25dp"
                    android:fontFamily="serif-monospace"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:textSize="25dp"/>

                <TextView
                    android:id="@+id/creditcardname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="Dekkiche Abdallah"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"
                    android:fontFamily="serif-monospace"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:textSize="23dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:paddingHorizontal="5dp"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/sendmoneybtn"
                        android:gravity="center"
                        android:layout_marginHorizontal="10dp"
                        android:background="@drawable/whitestrokeshape"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/arrow_right_solid"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:text="Send"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="serif-monospace"
                            android:textColor="@color/white"
                            android:gravity="center_vertical"
                            android:textSize="16dp"/>
                    </LinearLayout>


                </LinearLayout>



            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Services"
            android:layout_margin="15dp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:textSize="18dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/Details"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/bluebtncolor"
            android:padding="10dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="Spending Details"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:textSize="16dp"/>
        </LinearLayout>


